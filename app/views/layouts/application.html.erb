<!DOCTYPE html>
<html>
<head>
  <title>OnlineShop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">
  <div id="cart">
    <%= render partial: 'carts/cart_menu' %>
  </div>
  <div class="clear"></div>
  <div id="flash">
    <%= render partial: 'shared/flash' %>
  </div>
  <div id="header">
    <h1><%= link_to "OnlineShop", root_path %></h1>
  </div>
  <div id="main-content">
    <div id="categories">
      <ul>
        <%= render partial: 'categories/category', collection: @categories %>
      </ul>
    </div>
    <div id="right-container">
      <%= yield %>
    </div>
    <div class="clear"></div>
  </div>
</div>
</body>
</html>
